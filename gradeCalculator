import java.util.Arrays;
import java.util.Scanner;

public class gradeCalculator1 {

    static Scanner scan = new Scanner(System.in);
    static String courseList[];
    static double scoreList[];

    public static void main (String[]args){
        addCourse();
        addgrade();

    }

    private static void addgrade() {
        System.out.println("insert the score of the course grades ?");
        int courseScore = scan.nextInt();
        scoreList = new double[courseScore];
        for (int i = 0; i < courseList.length; i++) {
            System.out.println("insert the score of the grades respectively ?");
            String courseName = scan.next();
            courseList[i] = courseName;
            System.out.println("please insert for"+ Arrays.toString(courseList) +courseScore);


        }
    }

    private static void addCourse() {
        System.out.println("how many course do you wanna add?");
        int courseNumber = scan.nextInt();
        courseList = new String[courseNumber];
        for (int i = 0; i < courseList.length; i++) {

            System.out.println("please insert course name?");
            String courseName = scan.next();
            courseList[i] = courseName;

        }

    }
}
